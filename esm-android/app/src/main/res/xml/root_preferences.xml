<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="AI Wings Broker">

        <EditTextPreference
            app:key="broker_address"
            app:title="Server address"
            app:defaultValue="aiotlab-drone-cloud.ga"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="broker_port"
            app:title="Broker port"
            app:defaultValue="5672"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="broker_username"
            app:title="Broker username"
            app:defaultValue="aiotlab"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="broker_password"
            app:title="Broker password"
            app:defaultValue="aiotlab208"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>