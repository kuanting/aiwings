<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="AI Wings Broker">

        <EditTextPreference
            app:key="broker_address"
            app:title="Server address"
            app:defaultValue="aiotlab-drone-cloud.ga"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="broker_port"
            app:title="Broker port"
            app:defaultValue="5672"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="broker_username"
            app:title="Broker username"
            app:defaultValue="guest"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="broker_password"
            app:title="Broker password"
            app:defaultValue="guest"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="MAVLink SITL Simulator">
        <EditTextPreference
            app:key="sitl_address"
            app:title="SITL address"
            app:defaultValue="192.168.1.100"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="sitl_port"
            app:title="SITL port"
            app:defaultValue="5762"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>